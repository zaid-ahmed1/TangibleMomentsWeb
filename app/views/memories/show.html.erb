<div class="page-header">
  <%= link_to memories_path, class: 'btn btn-default' do %>
    All Memories
  <% end %>
  <%= link_to edit_memory_path(@memory), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show memory</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
    <dd><%= @memory.title %></dd>
  <dt>Video:</dt>
    <%= video_tag @memory.video, controls: true, preload: 'auto', width: 320, height: 240 %>
    <dt>QR Code:</dt>
  <dd>
    <% if @qr_code %>
      <div>
        <%= raw @qr_code.as_svg(module_size: 4, standalone: true) %>
      </div>
      <div>
        <%= link_to 'Download QR Code', download_qr_code_memory_path(@memory), class: 'btn btn-secondary mt-2' %>
      </div>
    <% else %>
      <p>No QR code available</p>
    <% end %>
  </dd>
</dl>

